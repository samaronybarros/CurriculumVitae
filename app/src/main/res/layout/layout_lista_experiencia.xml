<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCargo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Founder e CTO"
        app:layout_constraintEnd_toEndOf="@+id/tvEmpresa"
        app:layout_constraintStart_toStartOf="@+id/tvEmpresa"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpresa" />

    <View
        android:id="@+id/dividerExperiencia"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/tvCargo"
        app:layout_constraintStart_toStartOf="@+id/tvCargo"
        app:layout_constraintTop_toBottomOf="@+id/tvCargo" />
</android.support.constraint.ConstraintLayout>